doctype html
html
  head
    meta(charset=charset)
    title #{title}
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')  
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') DekretoApp
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/admin') Home
            //if user
            li
              a(href='/admin/houses/list') Casas
            li
                a(href='/admin/carnaval/list') Carnaval
            li
              a(href='/admin/events/list') Eventos
            li
              a(href='/admin/genre/list') Gênero
            li
              a(href='/admin/types/list') Tipos
            li
              a(href='/admin/users/list') Usuários do sistema 
            li
              a(href='/admin/appusers/list') Usuários do app
          ul.nav.navbar-nav.navbar-right
            if user
              li 
                a(href="/admin/users/logout") Logout
              li
                a(href="/admin/users/"+user._id) Usuário
            else
              li
                a(href="/admin/users/login") Login
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2017
        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/jquery.maskedinput.js')
        script(src='/js/main.js')
        script(src='/js/gmaps_scripts.js')
        script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyC3eDyghkL4FafvhWFq0QIKJqtckwoXn8I&callback=initMap')
