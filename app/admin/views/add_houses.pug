extends layout

block content
    h1 #{title}
    form(method='POST' action='/admin/houses/add')
      #form-group
      label #{label_house_name}:
      input.form-control(type='text', name='house_name')
      #form-group
      label #{label_house_address}:
      input.form-control(type='text', name='house_address')
      #form-group
      label #{label_house_email}:
      input.form-control(type='text', name='house_email')
      #form-group
      label #{label_house_phone}: 
      input.form-control(type='text', id='phone-validate', name='house_phone')
      #form-group
      label #{label_house_site}:
      input.form-control(type='text', name='house_site')
      #form-group
      label #{label_house_description}:
      textarea.form-control(name='house_description', cols='40', rows='10')
      #form-group
      label #{label_cover}:
      input.form-control(type='text', name='house_cover')
      #form-group
      label #{label_thumb}:
      input.form-control(type='text', name='house_thumb')
      #form-group
      label #{label_house_coordinateslat}:
      input.form-control(type='text', name='house_coordinateslat')
      #form-group
      label #{label_house_coordinateslng}:
      input.form-control(type='text', name='house_coordinateslng')
      br
      #form-group
      button.btn.btn-primary(type='submit',value='Submit') Enviar
      
